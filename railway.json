{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,  // تقليل عدد المحاولات لتجنب التكرار
    "healthcheck": {
      "path": "/health",
      "initialDelay": 30,
      "timeout": 10,
      "interval": 15
    }
  }
}